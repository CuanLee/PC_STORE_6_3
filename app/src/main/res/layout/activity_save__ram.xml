<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cuanlee.pc_store.Save_RAM">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add RAM"
        android:id="@+id/txtVwAddRam"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Code:"
        android:id="@+id/txtVwCode"
        android:layout_below="@+id/txtVwAddRam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/txtVwDesc"
        android:layout_below="@+id/txtVwCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MemorySize: "
        android:id="@+id/txtVwMemSize"
        android:layout_below="@+id/txtVwDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mem Config"
        android:id="@+id/txtVwConf"
        android:layout_below="@+id/txtVwMemSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBxCode"
        android:layout_above="@+id/txtVwDesc"
        android:layout_toRightOf="@+id/txtVwMemSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBxDesc"
        android:layout_above="@+id/txtVwMemSize"
        android:layout_toRightOf="@+id/txtVwMemSize"
        android:layout_alignRight="@+id/txtBxCode"
        android:layout_alignEnd="@+id/txtBxCode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBxMemSize"
        android:layout_alignBottom="@+id/txtVwMemSize"
        android:layout_alignLeft="@+id/txtBxDesc"
        android:layout_alignStart="@+id/txtBxDesc"
        android:layout_alignRight="@+id/txtBxDesc"
        android:layout_alignEnd="@+id/txtBxDesc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBxMemCon"
        android:layout_alignBottom="@+id/txtVwConf"
        android:layout_toRightOf="@+id/txtVwMemSize"
        android:layout_alignRight="@+id/btnSubmitSave"
        android:layout_alignEnd="@+id/btnSubmitSave" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btnSubmitSave"
        android:onClick="saveRam"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
